@using FiskePriser.Models
@model List<Arter>
    

<table id="FishListTable">
    @{ var a = 0;}
    <tr>
    @foreach (var x in Model)
    {
        <td style="text-align: center; padding: 10px;">
            @Html.HiddenFor(m=>x.Id)
            @Html.LabelFor(m=>x.Navn,x.Navn)
        </td>

        a++;
        
        if (a == 5)
        {
            a = 0;
            @:</tr>
            @:<tr>
        }
    }
    </tr>
</table>


<script>
    $(function () {
        $('#FishListTable td').click(function () {
            var x = $(this).find('#x_Id').get(0).value;
            console.log(x);
            $(this).css('background','red');
        });
    });
</script>